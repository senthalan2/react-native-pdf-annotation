<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/labelPageIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Page Index  :"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textPageNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/labelPageIndex"
        android:text="PageNumber"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/labelBookMarkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/labelPageIndex"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="5dp"
        android:text="Name    :"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editTextBookMarkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelBookMarkName"
        android:layout_alignBottom="@+id/labelBookMarkName"
        android:layout_toRightOf="@+id/labelPageIndex"
        android:ems="10"
        android:textColor="@android:color/black"/>

</RelativeLayout>
